<%= form_tag "/products", method: :post do %>

<form class="form-horizontal">
  <div class="form-group">
    <label for="focusedName" class="col-sm-2 control-label">Name: </label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="form_name" placeholder="Name">
    </div>
  </div>
  <div class="form-group">
    <label for="inputBrand" class="col-sm-2 control-label">Brand: </label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="form_brand" placeholder="Brand">
    </div>
  </div>
  <div class="form-group">
    <label for="inputDescription" class="col-sm-2 control-label">Description: </label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="form_description" placeholder="Description">
    </div>
  </div>
  <div class="form-group">
    <label for="inputPrice" class="col-sm-2 control-label">Price: </label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="form_price" placeholder="Price">
    </div>
  </div>
    <div>
    <label>Supplier ID: </label>
    <select name="form_supplier_id">
    <% @suppliers.each do |supplier| %>
      <option value=<%= supplier.id %>><%= supplier.name %></option>
    <% end %>
    </select>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-info">Submit</button>
    </div>
  </div>
</form>

<% end %>
