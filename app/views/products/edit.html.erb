

<%= form_tag "/products/#{@product.id}", method: :patch do %>

<form class="form-horizontal">
  <div class="form-group">
    <label for="focusedName" class="col-sm-2 control-label">Name: </label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="form_name" value="<%=@product.name%>">
    </div>

  </div>
  <div class="form-group">
    <label for="inputBrand" class="col-sm-2 control-label">Brand: </label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="form_brand" value="<%=@product.brand%>">
    </div>
  </div>
  <div class="form-group">
    <label for="inputDescription" class="col-sm-2 control-label">Description: </label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="form_description" value="<%=@product.description%>">
    </div>
  </div>
  <div class="form-group">
    <label for="inputPrice" class="col-sm-2 control-label">Price: </label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="form_price" value="<%=@product.price%>">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-info">Submit</button>
    </div>
  </div>
</form>
<% end %>
